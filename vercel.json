{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/ask",
        "methods": ["POST"],
        "dest": "/server.js"
      },
      {
        "src": "/public/(.*)",
        "dest": "/public/$1"
      },
      {
        "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg))",
        "dest": "/public/$1"
      },
      {
        "src": "/",
        "dest": "/public/index.html"
      }
    ]
  }
  